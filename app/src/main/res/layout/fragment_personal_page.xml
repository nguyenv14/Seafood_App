<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Views.Personal.PersonalPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/bg_personal_gradient">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="Hồ sơ cá nhân"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="10dp"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="-50dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/man1"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/customer_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyeen Van Vinh Nguyen"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <!--              -->
                <LinearLayout
                    android:id="@+id/btnGoToProfile"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin cá nhân"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/man"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"
                    />

                <LinearLayout
                    android:id="@+id/btnGoToAddressActivity"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ nhận hàng"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/home_address"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>

                <!--            -->

                <LinearLayout
                    android:id="@+id/btnGoToHistory"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử đã xem"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/history_time"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>

                <LinearLayout
                    android:id="@+id/loAppReviews"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá ứng dụng"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/feedback"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>

                <LinearLayout
                    android:id="@+id/btnGoToEvaluate"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá sản phẩm"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/customer_satisfaction"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điều khoản sử dụng"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/rules"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chính sách bảo mật"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/compliant"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>


                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trung tâm hỗ trợ"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/suport"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>



                <LinearLayout
                    android:id="@+id/btnLogOut"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng xuất"
                        android:textSize="18dp"
                        android:drawableStart="@mipmap/log_out"
                        android:drawablePadding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>