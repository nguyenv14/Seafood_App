<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/btnItemAddress"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/place"
            android:drawablePadding="5dp"
            android:text="Tên mặc định"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnUpdateAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/pen" />

            <ImageView
                android:id="@+id/btnDeleteAddress"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/remove"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameCustomer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nguyên đẹp trai (0839519415)" />

        <TextView
            android:id="@+id/tvAddressCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="131, Trân Dư, Phường An Xuân, TP Tam Kỳ, Tỉnh Quảng Nam"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompat"
            android:text="Đặt Làm Địa Chỉ Mặt Định"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.SwitchCompat>
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>