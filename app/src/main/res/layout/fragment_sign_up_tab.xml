<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/signimg"/>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutName"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:helperText="Required*"
                    app:helperTextEnabled="true"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="#DF0012"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                    app:startIconDrawable="@drawable/ic_baseline_account_circle_24"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/error"
                    app:endIconDrawable="@drawable/check_mark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the name"
                        android:inputType="text"
                        android:maxLength="100"
                        android:id="@+id/addName"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutEmail"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:helperText="Required*"
                    app:helperTextEnabled="true"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="#DF0012"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/error"
                    app:endIconDrawable="@drawable/check_mark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the email"
                        android:inputType="text"
                        android:maxLength="100"
                        android:id="@+id/addEmail"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutPhone"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:helperText="Required*"
                    app:helperTextEnabled="true"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="#DF0012"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/error"
                    app:endIconDrawable="@drawable/check_mark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the phone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:id="@+id/addPhone"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutPass1"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:helperText="Required*"
                    app:helperTextEnabled="true"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="#DF0012"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                    app:startIconDrawable="@drawable/ic_baseline_password_24"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/error"
                    app:endIconDrawable="@drawable/check_mark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the password"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:id="@+id/addPass1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutPass2"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:helperText="Required*"
                    app:helperTextEnabled="true"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="#DF0012"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                    app:startIconDrawable="@drawable/ic_baseline_password_24"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/error"
                    app:endIconDrawable="@drawable/check_mark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm the password"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:id="@+id/addPass2"/>

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/btnSignUp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_btn_addcart"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="40dp"
                        android:paddingVertical="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>