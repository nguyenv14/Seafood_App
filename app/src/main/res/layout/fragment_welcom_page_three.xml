<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Welcome.WelcomActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/onboarding3">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dễ Dàng Thanh Toán"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dễ Dàng Thanh Toán Với Nhiều Phương Thức Trực Tuyến Như Momo..."
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_gradient"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Start"
        android:textAlignment="center">
    </TextView>



</LinearLayout>