<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:visibility="visible"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/undo24x24"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/txtTitleToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản Phẩm Cùng Danh Mục"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/imgCartToolbar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cargo"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/aliceblue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="5dp"
                android:background="@drawable/layout_border_order_details"
                android:orientation="vertical">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin vận chuyển"
                    android:drawableStart="@mipmap/trans"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:drawablePadding="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/order_code"
                        android:padding="3dp"
                        android:drawableStart="@mipmap/boxes"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/abc_decor_view_status_guard"
                        android:text="Mã đơn hàng: 21Se123121"/>

                    <TextView
                        android:id="@+id/order_date"
                        android:padding="2dp"
                        android:drawableStart="@mipmap/date"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/abc_decor_view_status_guard"
                        android:text="Thời gian: 21/02/2023"/>
                    <TextView
                        android:id="@+id/order_status"
                        android:padding="3dp"
                        android:drawableStart="@mipmap/delivery"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng: Đơn hàng đang giao"
                        android:textSize="16dp"
                        android:textColor="@color/design_default_color_secondary"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="5dp"
                android:background="@drawable/layout_border_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:drawablePadding="5dp"
                    android:drawableStart="@mipmap/checklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin khách hàng"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:paddingBottom="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shipping_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khách hàng: Vĩnh Nguyên"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="2dp"
                        />
                    <TextView
                        android:id="@+id/shipping_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại: 0839519415"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="2dp"
                        />
                    <TextView
                        android:id="@+id/shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: 131, Trần Dư, Phường An Xuân, Thành phố Tam Kỳ, Tỉnh Quảng Nam"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="2dp"
                        />
                    <TextView
                        android:id="@+id/shipping_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chú thích: Không có"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="2dp"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="5dp"
                android:background="@drawable/layout_border_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mặt hàng"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:drawableStart="@mipmap/categories"
                    android:drawablePadding="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcOrderDetails"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_strike"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phương thức thanh toán"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/payment_status"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accent_material_dark"
                            android:text="Thanh toán khi nhận hàng">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền hàng:" />
                        <TextView
                            android:id="@+id/total_price"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.000.000 đ"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Phí vận chuyển:" />
                        <TextView
                            android:id="@+id/product_fee"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 30.000 đ"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Coupon giảm giá:" />
                        <TextView
                            android:id="@+id/product_coupon"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- 20.000 đ"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Thành tiền:" />
                        <TextView
                            android:id="@+id/pricePayment"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.320.000 đ"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    android:drawableStart="@mipmap/evaluation"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/formEvaluate"
                        android:layout_width="match_parent"
                        android:elevation="10dp"
                        app:cardCornerRadius="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@mipmap/man"/>
                                <TextView
                                    android:id="@+id/customer_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vĩnh Nguyên"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="16dp"/>
                                <TextView
                                    android:id="@+id/evaluate_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="21/02/2023"
                                    android:gravity="right|center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="-20dp"
                                android:padding="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/evaluate_star_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="18dp"/>
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_star_24"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/evaluate_content"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="16dp"
                                        android:textColor="@color/black"
                                        android:text="Chất lượng quá tốt, Ngon Bổ Rẻ. 10 điểm chất lượng"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/evaluate_status"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brown"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableStart="@mipmap/box"
                        android:text="Bạn chưa đánh giá sản phẩm này"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnStatus"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_btn_orange"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đã nhận được hàng"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>