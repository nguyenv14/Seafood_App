<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.LoginAndSignup.SignUp.Authentication.ChangePass.ChangePassActivity">


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:id="@+id/layoutPass1"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:helperText="Required*"
        app:helperTextEnabled="true"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#DF0012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:startIconDrawable="@drawable/ic_baseline_password_24"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/error"
        app:endIconDrawable="@drawable/check_mark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the password"
            android:inputType="textPassword"
            android:maxLength="100"
            android:id="@+id/addPass1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:id="@+id/layoutPass2"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:helperText="Required*"
        app:helperTextEnabled="true"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#DF0012"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:startIconDrawable="@drawable/ic_baseline_password_24"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/error"
        app:endIconDrawable="@drawable/check_mark">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm the password"
            android:inputType="textPassword"
            android:maxLength="100"
            android:id="@+id/addPass2"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/btnChangePass"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_btn_addcart"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>